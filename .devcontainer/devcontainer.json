{
    "build": {
        "dockerfile": "Dockerfile",
        "target": "dev-env"
    },
    "extensions": [
        "ms-python.python",
        "ms-vsliveshare.vsliveshare"
    ],
    "remoteUser": "developer",
    "mounts" :[
        "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind,consistency=cached"
    ],
    "containerEnv": { 
        "DISPLAY": ":0" 
    }
}
